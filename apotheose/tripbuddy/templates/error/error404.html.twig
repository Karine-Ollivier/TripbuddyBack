{% extends 'base.html.twig' %}

{% block title %}Page introuvable{% endblock %}

{% block body %}
   <div class="container mt-5 mb-5">
        <div class="alert alert-danger">
            <h1 class="alert-heading">Page non trouvée</h1>
            <p>La page que vous recherchez n'a pas été trouvée.</p>
        </div>
    </div>
    <a class="btn btn-primary" href="{{ path('accueil') }}">
            Aller à la page d'accueil
        </a>
        <img src="{{ asset('images/lost.png.jpg') }}" alt="Image introuvable" class="img-fluid mt-3" />
    </div>

{% endblock %}
