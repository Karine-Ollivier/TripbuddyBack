{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Utilisateur {{ user.firstname }} {{ user.lastname }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                <tr>
                </tr>
                    <th>Nom</th>
                    <td>{{ user.lastname }}</td>
                <tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-sm btn-secondary" href="{{ path('app_back_user_list') }}">Retour à la liste</a>

        <a class="btn btn-sm btn-warning" href="{{ path('app_back_user_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('back/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
