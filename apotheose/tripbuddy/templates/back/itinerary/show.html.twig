{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Itinéraire "{{ itinerary.title }}"</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ itinerary.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ itinerary.title }}</td>
                </tr>
                    <th>Date de départ</th>
                    <td>{{ itinerary.startDate|date('d-m-Y') }}</td>
                <tr>
                </tr>
                    <th>Date de fin</th>
                    <td>{{ itinerary.endDate|date('d-m-Y') }}</td>
                <tr>
                <tr>
                    <th>Etapes</th>
                    {% for step in itinerary.step %}
                        <td>{{ step.name }}</td> 
                    {% endfor %}
                </tr>
            </tbody>
        </table>

        <a class="btn btn-sm btn-secondary" href="{{ path('app_back_itinerary_list') }}">back to list</a>

        <a class="btn btn-sm btn-warning" href="#">edit</a>

        {# {{ include('back/user/_delete_form.html.twig') }} #}
    </div>
{% endblock %}
