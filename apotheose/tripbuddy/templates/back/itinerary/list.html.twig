{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-4">
                
        <h1 class="mb-4">Liste des Itinéraires</h1>


        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Titre</th>
                    <th>Créateur</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Etapes</th>
                </tr>
            </thead>
            <tbody>
            {% for itinerary in itineraries %}
                <tr>
                    <td>
                        <a class="btn btn-sm btn-primary" href="{{ path('app_back_itinerary_show', {'id': itinerary.id}) }}">Voir</a>
                        {{ include('back/itinerary/_delete_form.html.twig') }}
                    </td>
                    <td>{{ itinerary.title }}</td>
                    <td>{{ itinerary.user.firstname }} {{ itinerary.user.lastname }}</td>
                    <td>{{ itinerary.startDate|date('d-m-Y') }}</td>
                    <td>{{ itinerary.endDate|date('d-m-Y') }}</td>
                    <td>
                        <ul>
                            {% for step in itinerary.step %}
                                <li>{{ step.name }}</li>
                            {% endfor %}
                        </ul>
                    </td> 
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    
{% endblock %}
