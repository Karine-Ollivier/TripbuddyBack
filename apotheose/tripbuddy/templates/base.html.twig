<!-- Header -->
<!doctype html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <!-- Our custom CSS -->
    <!-- asset('css/oflix.css) ci dessous la methode asset me permet de mettre un lien vers le dossier public puis le fait de mettre 'css/oflix.css' en parametre permet de dire qu'on veut utiliser le fichier oflix.css qu'il y a dans le dossier css -->
    <link rel="stylesheet" href="{{ asset('css/tripbuddy.css') }}">
    <!-- favicon -->
    <link rel="shortcut icon" href="{{ asset('tripbuddy.png') }}" type="image/x-icon">

    <title>TripBuddy</title>
</head>
    <body>

    
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #FE9A2E">
        <div class="container-fluid">
            <a href="{{ path('app_back_index') }}" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none header-logo">
                <img src="{{ asset('tripbuddy.png') }}" height="24" alt="Logo TripBuddy" class="logo">
                <span class="header-logo__title">TripBuddy</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_back_index') }}">Accueil</a>
                    </li>
                </ul>
                    
                {# permet de créer une condition si on est connecté ou pas #}
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_back_user_list') }}">Utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active"  href="{{ path('app_back_itinerary_list') }}">Itinéraires</a>
                        </li>
                        <a href="{{ path('app_back_logout')}}" class="btn btn-danger me-2">Déconnexion</a>
                    </ul>
                        
                {% else %}
                <a href="{{ path('app_back_login')}}" class="btn btn-danger me-2">Connexion</a>
                {% endif %}
            </div> 
        </div>         
    </nav>
          
    {% block body %}{% endblock %}


    <footer class="container-fluid py-4 border-top text-center">
        <span class="text-muted">TripBuddy - Tous droits réservés
            <br><small>Oclock 2023</small>
        </span>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous">
    </script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
